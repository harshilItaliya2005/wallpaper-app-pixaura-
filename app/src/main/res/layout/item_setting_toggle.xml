<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal" android:padding="16dp">

    <TextView android:id="@+id/title" android:layout_width="0dp"
        android:textColor="@color/white"
        android:layout_weight="1" android:layout_height="wrap_content"
        android:text="Toggle Title" android:textSize="16sp"/>

    <Switch android:id="@+id/toggleSwitch" android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
