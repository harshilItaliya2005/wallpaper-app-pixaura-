<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base Light Theme -->
    <style name="Base.Theme.PixAura" parent="Theme.Material3.DynamicColors.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/barColor</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- App Theme -->
    <style name="Theme.PixAura" parent="Base.Theme.PixAura" />

    <!-- Splash Theme -->
    <style name="Theme.PixAura.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="statusBarBackground">@color/background</item>
        <item name="postSplashScreenTheme">@style/Theme.PixAura</item>
    </style>
</resources>